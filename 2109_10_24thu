167.P
SELECT 	EMPNO,ENAME,SAL,COMM,SAL+COMM,
		NVL(COMM,0),
		SAL+NVL(COMM,0)
 FROM EMP;

169.P
SELECT 	EMPNO, ENAME, COMM,
		NVL2(COMM,'0','X'),
		NVL2(COMM, SAL*12+COMM,SAL*12)AS ANNSAL
 FROM EMP;		

DOCODE함수와 CASE문

170.P
SELECT 	EMPNO, ENAME, JOB, SAL,
		DECODE(	JOB,
				'MANAGER',	SAL*1.1,
				'SALESMAN',	SAL*1.05,
				'ANALYST',	SAL,
				SAL*1.03)AS UPSAL
 FROM EMP;			
//실행헀을때 데이터타입은 숫자이다
//출력되는 데이터타입은 다같아야한다	
			
172.P		
SELECT	EMPNO, ENAME, JOB, SAL,
	CASE JOB
		WHEN 'MANAGER' 	THEM SAL*1.1
		WHEN 'SALESMAN' THEM SAL*105
		WHEN 'ANALYST' 	THEM SAL
		ELSE SAL*1.03
	END AS UPSAL
	FROM EMP;
			
173.P
SELECT	EMPNO, ENAME, COMM,
	CASE
		WHEN COMM IS NULL	THEN'해당사항 없음'
		WHEN COMM = 0  		THEN'수당 없음'
		WHEN COMM > 0		THEN'수당 : ' || COMM
	END AS COMM_TEXT
	FROM EMP;
// 기준이 없음 각WHEN절에 기반해서 알아서 처리한다
//CASE문이 범용성이 더 넓음			
			
			
			
			

